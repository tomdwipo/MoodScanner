<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:textSize="34dp"
        android:textStyle="bold"
        android:text="Mood Scanner"
        android:paddingBottom="10dp"
        android:textColor="#fabfab"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textExplain"
        android:textSize="15dp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:text="@string/explainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/bgfinger"
        android:layout_marginTop="5dp"
        android:src="@drawable/finger_bg"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textExplain"/>

    <ImageView
        android:src="@drawable/thumb_finger_prints"
        android:layout_below="@+id/textExplain"
        android:layout_centerHorizontal="true"
        android:id="@+id/thumbPrint"
        android:layout_width="150dp"
        android:layout_height="250dp" />
    <TextView
        android:id="@+id/textResultTitle"
        android:text="Your Mood: "
        android:textColor="#febb"

        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_below="@+id/bgfinger"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Hello"
        android:textColor="#bbff1251"
        android:layout_below="@+id/textResultTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
